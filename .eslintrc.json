{
  "extends": [
    "vaadin",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": [ "packages/**/test/*.spec.js" ],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": false,
        "sinon": false
      }
    }
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  }
}
